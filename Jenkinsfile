pipeline {
  agent any
  stages {
     stage('build'){
        steps {
          echo "hello world"
          }
       }
    stage('test'){
        steps {
          echo "hello world"
          }
       }
    stage('deploy'){
        steps {
          echo "hello world"
          }
       }
    stage('deployment'){
        steps {
          echo "hello world"
          }
       }
    }
  post {
  always {
   echo "always"
  }
  failure {
    echo "build failed"
   }
 }
}

    
  
